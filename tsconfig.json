{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "es2016",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "pretty": true,
    "sourceMap": true
  },
  "include": ["src"],
  "exclude": [
    "build",
    "config",
    "node_modules",
    "public",
    "babel.config.js",
    "jest.config.js"
  ]
}
